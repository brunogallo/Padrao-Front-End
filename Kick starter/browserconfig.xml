<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <square70x70logo src="/assets/img/icons/msapp-tiny.png"/>
      <square150x150logo src="/assets/img/icons/msapp-square.png"/>
      <wide310x150logo src="/assets/img/icons/msapp-wide.png"/>
      <square310x310logo src="/assets/img/icons/msapp-large.png"/>
      <TileColor>#ff0000</TileColor>
    </tile>
    <badge>
      <polling-uri src="badge.xml"/>
      <frequency>30</frequency>
    </badge>
    <notification>
      <polling-uri src="/rss.xml"/>
      <frequency>30</frequency>
      <cycle>1</cycle>
    </notification>
  </msapplication>
</browserconfig>
