// ====================================================================
// Helpers
// ====================================================================

.show
  display block

.hide
  display none

.text-center
  text-align center

.text-left
  text-align left

.text-right
  text-align right

.center-block
  margin 0 auto
  display block

.img-responsive
  max-width 100%

.clearfix
  &:before
  &:after
    content “ “
    display table

  &:after
    clear both

*,
*:after,
*:before
  box-sizing border-box

.container
  width 100%
  max-width container-width
